
<p id="notice"><%= notice %></p>

<h1>Fruits</h1>
<%=
  link_to '<button>Download as Excel</button>'.html_safe,
  items_path(format: :xlsx)
%>
<%=
  link_to '<button>Upload from Excel</button>'.html_safe,
  new_items_import_path
%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td><%= link_to '<button>Show</button>'.html_safe, item %></td>
        <td><%= link_to '<button>Edit</button>'.html_safe, edit_item_path(item) %></td>
        <td><%= link_to '<button>Destroy</button>'.html_safe, item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button>New Upload</button>'.html_safe, new_item_path %>